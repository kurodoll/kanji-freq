extends layout

block content
  div.center
    p This is where you can upload scripts to be analyzed and added to the site.

    br
    form(action='/upload' method='post' enctype='multipart/form-data')
      select(name='type')
        option(value='Novel') Novel
        option(value='Light Novel') Light Novel
        option(value='Visual Novel') Visual Novel

      br
      input(type='text' name='title' placeholder='Title' maxlength='128')

      br
      input(type='file' name='script')

      br
      br
      input(type='submit' value='Upload')
