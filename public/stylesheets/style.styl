// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                     * // Content Areas //
body
    margin 0
    background repeating-linear-gradient(90deg, rgb(16,16,16), rgb(16,16,16) 20px, rgb(20,20,20) 20px, rgb(20,20,20) 40px)

div.nav
    padding 5px
    padding-left 40px

    background rgba(0,0,0,.5)

div.nav p a
    padding 5px
    padding-left 15px
    padding-right 15px

div.nav p a:hover
    text-decoration none

    background rgba(150,100,250,.2)
    border-top 1px rgb(200,50,250) solid

div.content
    position absolute
    top 127px
    bottom 0
    left 0
    right 0
    overflow-y scroll

    background rgba(5,10,15,.5)

div.center
    margin-left 20%
    margin-right 20%
    padding-top 20px
    padding-bottom 20px


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                              * // Text //
h1
    margin 0
    padding-left 25px

    font 50pt 'Trebuchet MS'
    color rgb(20,20,20)

    -webkit-text-stroke 2px rgba(50,100,150,.5)
    text-shadow 10px 10px 0 rgba(100,150,200,.1)

p
    margin 0

    font 10pt Calibri
    color rgb(200,200,200)

a
    color rgb(100,150,200)
    text-decoration none

a:hover
    text-decoration underline
